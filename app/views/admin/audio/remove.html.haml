%h1=t 'remove', :title => @audio.title, :scope => 'audio-player.playlist.track'
%p=t 'warn-remove', :scope => 'audio-player.playlist.track'

.inset
  %table.index#audio
    %tbody
      = render_tracks @audio, :simple => true, :level => 0

- form_for [:admin, @audio], :html => { :method => :delete } do |form|

  %p.buttons
    %input.button{:type=>"submit", :value => t('remove') }/
    = t('or')
    = link_to t('cancel'), admin_audio_index_path

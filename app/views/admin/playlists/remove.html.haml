- include_audio_player
- with_options :scope => 'audio-player.playlist' do |scope|

  %h1=scope.t 'remove', :title => @playlist.title

  .inset
    %table#audio
      %tbody
        = render_tracks @playlist.tracks, :level => 0, :simple => true

  %p=scope.t 'warn-remove'

  - form_for [:admin, @playlist], :html => { :method => :delete } do |form|

    %p.buttons
      %input.button{:type=>"submit", :value => t('remove') }/
      = t('or')
      = link_to t('cancel'), admin_playlists_path
